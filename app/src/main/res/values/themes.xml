<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础主题 -->
    <style name="Theme.RemoteApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- 主色 -->
        <item name="colorPrimary">@color/ui_theme_c1</item>
        <item name="colorPrimaryVariant">@color/ui_theme_c1</item>
        <item name="colorOnPrimary">@color/ui_system_c5</item>

        <!-- 强调色 -->
        <item name="colorSecondary">@color/ui_theme_c0</item>
        <item name="colorSecondaryVariant">@color/ui_theme_c0</item>
        <item name="colorOnSecondary">@color/ui_system_c5</item>

        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.RemoteApp.NoActionBar" parent="Theme.RemoteApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RemoteApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RemoteApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>