<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 基础主题 -->
    <style name="UiApp" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- 主色 -->
        <item name="colorPrimary">@color/ui_theme_c1</item>
        <item name="colorPrimaryVariant">@color/ui_theme_c1</item>
        <item name="colorOnPrimary">@color/ui_system_c5</item>

        <!-- 强调色 -->
        <item name="colorSecondary">@color/ui_theme_c0</item>
        <item name="colorSecondaryVariant">@color/ui_theme_c0</item>
        <item name="colorOnSecondary">@color/ui_system_c5</item>

        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">?attr/colorOnPrimary</item>
    </style>

    <style name="UiApp.NoActionBar" parent="UiApp">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="UiApp.NoActionBar.RdpScreen" parent="UiApp.NoActionBar">
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@color/ui_black</item>
    </style>

    <style name="UiApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="UiApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UiApp.TabFontBold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="UiApp.TabFontBold.12">
        <item name="android:textSize">@dimen/ui_font_12</item>
    </style>

</resources>