<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_shape_radius_12">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/ui_size_20"
        android:paddingTop="@dimen/ui_size_12"
        android:paddingEnd="@dimen/ui_size_20"
        android:paddingBottom="@dimen/ui_size_12"
        android:text="@string/ui_common_title"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_16"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_msg"
        android:layout_width="@dimen/ui_size_0"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1.5"
        android:paddingStart="@dimen/ui_size_20"
        android:paddingEnd="@dimen/ui_size_20"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        tools:text="提示内容" />

    <FrameLayout
        android:id="@+id/fl_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_msg" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_size_12"
        android:layout_marginEnd="@dimen/ui_size_10"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/ui_size_10"
        android:paddingTop="@dimen/ui_size_10"
        android:paddingEnd="@dimen/ui_size_10"
        android:paddingBottom="@dimen/ui_size_8"
        android:text="@string/ui_common_cancel"
        android:textColor="@color/ui_theme_c1"
        android:textSize="@dimen/ui_font_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tv_done"
        app:layout_constraintTop_toBottomOf="@+id/fl_view"
        app:layout_goneMarginEnd="@dimen/ui_size_8" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ui_size_12"
        android:layout_marginEnd="@dimen/ui_size_10"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="@dimen/ui_size_10"
        android:paddingTop="@dimen/ui_size_10"
        android:paddingEnd="@dimen/ui_size_10"
        android:paddingBottom="@dimen/ui_size_8"
        android:text="@string/ui_common_done"
        android:textColor="@color/ui_theme_c1"
        android:textSize="@dimen/ui_font_14"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fl_view" />
</androidx.constraintlayout.widget.ConstraintLayout>