<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.HomeActivity">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_0"
        app:layout_constraintBottom_toTopOf="@+id/bnv_tab"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bnv_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_50"
        android:background="?android:attr/windowBackground"
        app:elevation="@dimen/ui_size_1"
        app:itemIconSize="@dimen/ui_size_20"
        app:itemTextAppearanceActive="@style/main_bottom_nav_selected"
        app:itemTextAppearanceInactive="@style/main_bottom_nav_normal"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/main_activity_tab" />

</androidx.constraintlayout.widget.ConstraintLayout>