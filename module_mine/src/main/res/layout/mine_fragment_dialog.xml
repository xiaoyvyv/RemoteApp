<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/mine_shape_dialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/ui_size_20"
        android:paddingTop="@dimen/ui_size_16"
        android:paddingEnd="@dimen/ui_size_20"
        android:paddingBottom="@dimen/ui_size_16"
        android:text="请长按条目调整数据映射关系"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_0.5"
        android:background="@color/ui_system_divider"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/ui_shape_divider_hor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_divider"
        app:showDividers="middle|end">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_size_40"
            android:gravity="center"
            android:paddingStart="@dimen/ui_size_20"
            android:paddingEnd="@dimen/ui_size_20"
            android:text="标签"
            android:textColor="@color/ui_text_c1"
            android:textSize="@dimen/ui_font_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_size_40"
            android:gravity="center"
            android:paddingStart="@dimen/ui_size_20"
            android:paddingEnd="@dimen/ui_size_20"
            android:text="分组"
            android:textColor="@color/ui_text_c1"
            android:textSize="@dimen/ui_font_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_size_40"
            android:gravity="center"
            android:paddingStart="@dimen/ui_size_20"
            android:paddingEnd="@dimen/ui_size_20"
            android:text="地址"
            android:textColor="@color/ui_text_c1"
            android:textSize="@dimen/ui_font_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_size_40"
            android:gravity="center"
            android:paddingStart="@dimen/ui_size_20"
            android:paddingEnd="@dimen/ui_size_20"
            android:text="端口"
            android:textColor="@color/ui_text_c1"
            android:textSize="@dimen/ui_font_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_size_40"
            android:gravity="center"
            android:paddingStart="@dimen/ui_size_20"
            android:paddingEnd="@dimen/ui_size_20"
            android:text="用户"
            android:textColor="@color/ui_text_c1"
            android:textSize="@dimen/ui_font_14" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ui_size_40"
            android:gravity="center"
            android:paddingStart="@dimen/ui_size_20"
            android:paddingEnd="@dimen/ui_size_20"
            android:text="密码"
            android:textColor="@color/ui_text_c1"
            android:textSize="@dimen/ui_font_14" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:overScrollMode="never"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ll_left"
        app:layout_constraintTop_toBottomOf="@+id/v_divider"
        tools:listitem="@layout/mine_fragment_dialog_item" />
</androidx.constraintlayout.widget.ConstraintLayout>