<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/ui_size_40"
    android:background="@drawable/mine_shape_dialog">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="@dimen/ui_size_120"
        android:layout_height="@dimen/ui_size_40"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:orientation="horizontal"
        android:paddingStart="@dimen/ui_size_20"
        android:paddingEnd="@dimen/ui_size_20"
        android:singleLine="true"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_12"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>