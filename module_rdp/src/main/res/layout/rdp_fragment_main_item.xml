<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ui_selector_ripper"
    android:clickable="true"
    android:focusable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/ui_size_24"
        android:layout_height="@dimen/ui_size_24"
        android:layout_marginStart="@dimen/ui_size_20"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ui_icon_windows" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_size_16"
        android:layout_marginTop="@dimen/ui_size_12"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_14"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="家用主机" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_size_16"
        android:layout_marginTop="@dimen/ui_size_5"
        android:layout_marginBottom="@dimen/ui_size_12"
        android:textColor="@color/ui_text_c2"
        android:textSize="@dimen/ui_font_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_icon"
        app:layout_constraintTop_toBottomOf="@+id/tv_label"
        tools:text="ip:101.132.108.0" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ui_size_20"
        android:textColor="@color/ui_text_c3"
        android:textSize="@dimen/ui_font_12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_label"
        tools:text="上次登录：2020/12/12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ui_size_0.5"
        android:layout_marginStart="@dimen/ui_size_20"
        android:layout_marginEnd="@dimen/ui_size_20"
        android:background="@color/ui_system_divider"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>