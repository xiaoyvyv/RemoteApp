<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xiaoyv.ui.toolbar.AppToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xiaoyv.ui.setting.UiSettingScreen
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:ui_sp="TEMP">

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.debug_level"
                app:ui_list_title="@array/debug_array"
                app:ui_list_value="@array/debug_values_array"
                app:ui_title="@string/debug_level"
                app:ui_type="type_list_string" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.async_channel"
                app:ui_title="@string/settings_async_channel"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.async_update"
                app:ui_title="@string/settings_async_update"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.async_input"
                app:ui_title="@string/settings_async_input"
                app:ui_type="type_boolean" />

        </com.xiaoyv.ui.setting.UiSettingScreen>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>