<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.xiaoyv.ui.toolbar.AppToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xiaoyv.ui.setting.UiSettingScreen
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ui_sp="TEMP">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_host"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/ui_size_20"
                android:paddingTop="@dimen/ui_size_16"
                android:paddingEnd="@dimen/ui_size_20"
                android:paddingBottom="@dimen/ui_size_8"
                android:text="@string/settings_cat_host"
                android:textColor="@color/ui_text_c1"
                android:textSize="@dimen/ui_font_16"
                android:textStyle="bold" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:id="@+id/asv_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:id="@+id/asv_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:id="@+id/asv_ip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:id="@+id/asv_port"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_credentials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/ui_size_20"
                android:paddingTop="@dimen/ui_size_16"
                android:paddingEnd="@dimen/ui_size_20"
                android:paddingBottom="@dimen/ui_size_8"
                android:text="@string/settings_cat_credentials"
                android:textColor="@color/ui_text_c1"
                android:textSize="@dimen/ui_font_16"
                android:textStyle="bold" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:id="@+id/asv_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:id="@+id/asv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.xiaoyv.ui.setting.UiSettingScreen>

    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>