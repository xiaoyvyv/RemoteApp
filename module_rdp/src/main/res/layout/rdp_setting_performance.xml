<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.xiaoyv.ui.toolbar.UiAppToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.xiaoyv.ui.setting.UiSettingScreen
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            app:ui_sp="TEMP">


            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_remotefx"
                app:ui_title="@string/settings_perf_remotefx"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_gfx"
                app:ui_title="@string/settings_perf_gfx"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="@string/preference_key_h264"
                app:ui_title="@string/settings_perf_gfx_h264"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_wallpaper"
                app:ui_title="@string/settings_perf_wallpaper"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_font_smoothing"
                app:ui_title="@string/settings_perf_font_smoothing"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_desktop_composition"
                app:ui_title="@string/settings_perf_desktop_composition"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_window_dragging"
                app:ui_title="@string/settings_perf_full_window_drag"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_menu_animation"
                app:ui_title="@string/settings_perf_menu_animation"
                app:ui_type="type_boolean" />

            <com.xiaoyv.ui.setting.UiSettingView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:ui_key="bookmark.perf_themes"
                app:ui_title="@string/settings_perf_theming"
                app:ui_type="type_boolean" />
        </com.xiaoyv.ui.setting.UiSettingScreen>
    </androidx.core.widget.NestedScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>