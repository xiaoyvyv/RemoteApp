<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/ui_size_20"
    android:paddingEnd="@dimen/ui_size_20">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ui_size_6"
        android:paddingBottom="@dimen/ui_size_6"
        android:text="@string/settings_username"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_14" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ui_theme_c0"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="@dimen/ui_font_14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ui_size_6"
        android:paddingBottom="@dimen/ui_size_6"
        android:text="@string/settings_password"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_14" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ui_theme_c0"
        android:inputType="textWebPassword"
        android:singleLine="true"
        android:textSize="@dimen/ui_font_14" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/ui_size_6"
        android:paddingBottom="@dimen/ui_size_6"
        android:text="@string/settings_domain"
        android:textColor="@color/ui_text_c1"
        android:textSize="@dimen/ui_font_14" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_domain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/ui_theme_c0"
        android:inputType="text"
        android:singleLine="true"
        android:textSize="@dimen/ui_font_14" />

</androidx.appcompat.widget.LinearLayoutCompat>
