<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/ui_text_c5" />

            <stroke
                android:width="1dp"
                android:color="@color/ui_text_c3" />

            <corners android:radius="4dp" />

            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:gravity="top|start"
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">

            <solid android:color="@color/ui_text_c4" />

            <stroke
                android:width="1dp"
                android:color="@color/ui_text_c3" />

            <corners android:radius="4dp" />

            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>
</layer-list>