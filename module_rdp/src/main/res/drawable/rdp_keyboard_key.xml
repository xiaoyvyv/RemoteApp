<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Toggle keys. Use checkable/checked state. -->
    <item android:drawable="@drawable/rdp_keyboard_key_pressed_on" android:state_checkable="true" android:state_checked="true" android:state_pressed="true" />
    <item android:drawable="@drawable/rdp_keyboard_key_pressed_off" android:state_checkable="true" android:state_pressed="true" />
    <item android:drawable="@drawable/rdp_keyboard_key_normal_on" android:state_checkable="true" android:state_checked="true" />
    <item android:drawable="@drawable/rdp_keyboard_key_normal_off" android:state_checkable="true" />

    <!-- Normal keys -->
    <item android:drawable="@drawable/rdp_keyboard_key_pressed" android:state_pressed="true" />
    <item android:drawable="@drawable/rdp_keyboard_key_normal" />
</selector>
